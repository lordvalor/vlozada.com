<div class="main container">
    {%- for post in collections.post | reverse -%}
    <article>
      <span class="entry-date">🗓️ {{ post.date.toUTCString() }}</span>
      <h3 class="entry-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    </article>
    {%- endfor -%}
</div>